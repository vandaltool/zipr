if [[ ! "$LD_LIBRARY_PATH" =~ (^|:)"$PEASOUP_UMBRELLA_DIR/lib:$STRATA/lib"(:|$) ]]
then
    export LD_LIBRARY_PATH=$PEASOUP_UMBRELLA_DIR/lib:$STRATA/lib:$LD_LIBRARY_PATH
fi

source $PEASOUP_UMBRELLA_DIR/irdb_vars

